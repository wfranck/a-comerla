# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
GET     /crud/index                             Application.adminHome
*      /restaurants/generate              Restaurants.generate                
*      /admin                                   module:crud
GET   /restaurants/get-picture/{id}             Restaurants.getPicture
GET   /restaurants/delete-picture/{id}             Restaurants.deletePicture
GET   /restaurants/add-picture                   Restaurants.addPicture
GET  /order/new                                  OrderController.newOrder
GET  /order/new/{id}                                  OrderController.newOrderStep2
GET /order/list                                       OrderController.list
GET /order/show/id                                       OrderController.show
# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public



# Catch all
*       /{controller}/{action}                  {controller}.{action}

                            